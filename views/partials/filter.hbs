{{#extend "scripts"}}
    <script src = "maps.js" > </script>
    <script src = "filterSearch.js" > </script>
{{/extend}}
<div class= 'container'>
    <h2>Filter Options </h2>
    <form>
        <div class = 'form-group'>
            <label for="speciesSearch">Species
                <input type="text" class="form-control" id="speciedSearch" aria-describedby="speciesSearchExp" >
            </label>
            <small id="speciesSearchExp" class="form-text text-muted">Input 4 letter code, 6 letter code, Scientific Name, or English Name</small>
        </div>
        <div class = 'form-group'>
            <label for="functionalGroup"> Functional Group
                <select class="form-control" type= 'select' id= "functionalGroup" >
                    <option value = '' disabled selected > Select</option>
                    <option value = '1'> Nightjars</option>
                    <option value = '2'> Ducks</option>
                    <option value = '3'> Geese</option>
                    <option value = '4'> Woodpeckers</option>
                    <option value = '5'> Songbirds</option>
                    <option value = '6'> Owls</option>
                    <option value = '12'> Vultures</option>
                    <option value = '13'> Doves</option>
                    <option value = '7'> Gamebirds</option>
                    <option value = '8'> Seabirds</option>
                    <option value = '9'> Shorebirds</option>
                    <option value = '10'>Wading Birds</option>
                    <option value = '11'> Raptors</option>
                </select>
            </label>
        </div>
            <button class="btn btn-light" id = "submitBird" onclick = 'filterSearch(document.getElementById("functionalGroup").value)'>Submit</button>
    </form>
</div>
