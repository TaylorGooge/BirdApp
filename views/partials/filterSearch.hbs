{{#extend "stylesheets"}}
    <link rel="stylesheet" href="filterSearchStyles.css">
{{/extend}}
<div class= 'container-fluid'>
    <h2>Filter Options </h2>
    <form id = 'searchForm'>
        <div class = 'form-group'>
            <label for="speciesSearch">Species
                 <select class="form-control dropdown-basic-single" type= 'select' id= "speciesSearch" autocomplete= "on">
                    <option value = '0'> Select</option>
                </select>
            </label>
            <small id="speciesSearchExp" class="form-text text-muted">Input 4 letter code, 6 letter code, Scientific Name, or English Name</small>
        </div>
        <div class = 'form-group'>
            <label for="functionalGroup"> Functional Group
                <select class="form-control search-select-basic-single" type= 'select' id= "functionalGroup" >
                    <option value = '0' selected > Select</option>
                </select>
            </label>
        </div>
            <button class="btn btn-secondary" id = "search-submitBird">Submit</button>
    </form>
</div>
{{#extend "scripts"}}
    <script src = "toGeoJson.js" > </script>
    <script src = "filterSearch.js" > </script>
{{/extend}}
