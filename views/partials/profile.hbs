{{#extend "stylesheets"}}
       <link rel="stylesheet" href="profileStyles.css">
{{/extend}}

<h2 class="lead display-4 justify-content-left">Profile</h2>
<div class="container-fluid mt-4 mb-4 p-3 d-flex justify-content-center" id= 'profile'>
    <div class="d-flex flex-column justify-content-center align-items-center border border-dark container-fluid"> 
        <img class ='profileDetails' src="{{userMap.profilePic}}" onerror="this.onerror=null;this.src='https://birdr-app.s3.amazonaws.com/public/profileFallback.png';" height="100" width="100" alt="Profile"/> 
        <span class="profileDetails"> <b>Name:</b>{{userMap.firstName}} {{userMap.lastName}}</span> 
        <span class="profileDetails"> <b>Username:</b> {{userMap.userName}}</span>
        <span class="profileDetails"> <b>Email:</b> {{userMap.email}}</span>   
        <div class="container-fluid"> 
            <h3 class="lead display-5">Tracking History </h3> 
            <div class = 'container-fluid' id= 'profileContainer'>
                <button class ="btn btn-secondary" id="button">Permanently delete selected row</button>
                <table class="table table-striped table-responsive" id="profile-table">
                    <thead>
                        <tr>
                            <th>
                                id
                            </th>
                            <th>
                                userId
                            </th>
                            <th>
                                birdId
                            </th>
                            <th>
                                Bird
                            </th>
                            <th>
                                Date
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>

</div>
{{#extend "scripts"}}
    <script src = "profile.js" > </script>
{{/extend}}