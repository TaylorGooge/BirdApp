{{#extend "stylesheets"}}
       <link rel="stylesheet" href="profileStyles.css">
{{/extend}}


<div class="container mt-4 mb-4 p-3 d-flex justify-content-center" id= 'profile'>
    <div class="card p-4">
        <div class=" image d-flex flex-column justify-content-center align-items-center"> 
            <img class ='profileDetails' {{#if userMap.profilePic}} src="{{userMap.profilePic}}" {{else}} src="profileFallback.png" {{/if}} height="100" width="100" alt="Profile"/> 
            <span class="name mt-3 profileDetails"> <b>Name:</b>{{userMap.firstName}} {{userMap.lastName}}</span> 
            <span class="idd profileDetails"> <b>Username:</b> {{userMap.userName}}</span>
            <span class="profileDetails"> <b>Email:</b> {{userMap.email}}</span>     
            <div class=" px-2 rounded mt-4 date "> <span class="lead">Recently Logged Birds </span> 
                <div class = 'container' id= 'profileContainer'>
                    <table class="table table-striped">
                        <thead>
                            <tr >
                                <th>
                                    Bird
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Delete 
                                </th>
                                <th>
                                    <button class= 'btn btn-light' data-bs-toggle="modal" data-bs-target="#deleteBirdModal">?</button>
                                </th>
                            </tr>
                        </thead>
                        <tbody id = "birdList">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{{#extend "scripts"}}
    <script src = "profile.js" > </script>
{{/extend}}